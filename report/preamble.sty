\newcommand{\includeimage}[2]{
    \begin{figure}[H]
        \centering
        \includegraphics[width=\linewidth]{#1}
        \if\relax\detokenize{#2}\relax
            % Do nothing if #2 is empty
        \else
            \caption{#2}
        \fi
    \end{figure}
}

